extends ../layout/index
block styles
    link(rel="stylesheet" href="https://unpkg.com/leaflet@1.8.0/dist/leaflet.css")
block content
    .py-10

        if errors 
            div(class="alert-error")
                each error in errors
                    p(class="alert-error__text") #{error.msg}

        form(class="max-w-4xl mx-auto bg-white md:p-5 shadow p-2" action="/propiedades/crear" method="POST")
            div
                h3(class="text-lg leading-6 font-medium text-gray-900") Información General
                p(class="text-gray-600") Añade información sobre la propiedad en venta
            include ../templates/input
                block label
                    | Título
                - var id = "title"
                - var placeholder = "Ej. Casa en la playa"
                - var name = "title"
            include ../templates/input
                block label
                    | Descripción
                - var id = "description"
                - var placeholder = "Ej. Casa en la playa con vista al mar"
                - var name = "description"
            div(class="md:grid md:grid-cols-2 md:gap-4")
                include ../templates/label
                    block label
                        | Categoría
                    select(name="categoria" id="categoria" class="input")
                        option(value="" disabled selected) -- Seleccione --
                        each category in categories
                            option(value=category.id)= category.name
                    
                    

                div(class="py-2")
                    label(for="precio" class="label") Precio
                    select(name="precio" id="precio" class="input")
                        option(value="" disabled selected) -- Seleccione --
                        each price in prices
                            option(value=price.id)= price.price
            div(class="md:grid md:grid-cols-3 md:gap-4")
                div(class="py-2")
                    label(for="habitaciones" class="label") Habitaciones
                    select(name="habitaciones" id="habitaciones" class="input")
                        option(value="" disabled selected) -- Seleccione --
                        - let habitacion = 1;
                            while habitacion <= 6
                                option(value=habitacion) #{habitacion++}
                div(class="py-2")
                    label(for="estacionamiento" class="label") Estacionamiento
                    select(name="estacionamiento" id="estacionamiento" class="input")
                        option(value="" disabled selected) -- Seleccione --
                        - let estacionamiento = 1;
                            while estacionamiento <= 5
                                option(value=estacionamiento) #{estacionamiento++}
                div(class="py-2")
                    label(for="wc" class="label") WC
                    select(name="wc" id="wc" class="input")
                        option(value="" disabled selected) -- Seleccione --
                        - let wc = 1;
                            while wc <= 5
                                option(value=wc) #{wc++}
            div(class="border-gray-200 border-t py-5 space-y-5")
                h3(class="text-lg leading-6 font-medium text-gray-900") Ubicación
                p(class="text-gray-600") Añade la ubicación de la propiedad
                div(id="mapa" class="my-2 h-80")
                div
                    p(class="text-gray-600 calle")
                input(type="hidden" name="calle" id="calle" )
                input(type="hidden" name="lat" id="lat" )
                input(type="hidden" name="lng" id="lng")
            input(type="submit" value="Añadir Imagen" class="btn")

block scripts 
    script(src="https://unpkg.com/leaflet@1.8.0/dist/leaflet.js")
    script(src="https://unpkg.com/esri-leaflet@3.0.8/dist/esri-leaflet.js")
    script(src="https://unpkg.com/esri-leaflet-geocoder@2.2.13/dist/esri-leaflet-geocoder.js")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/leaflet-geosearch/2.7.0/bundle.min.js")
    script(src="/js/mapa.js")